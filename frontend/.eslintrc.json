{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:flowtype/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "strict": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "class-methods-use-this": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "no-param-reassign": [2, { "props": false }],
        "babel/semi": 1,
        "no-div-regex": 1,
        "wrap-regex": 1,
        "no-regex-spaces": 1,
        "no-unsafe-regex/no-unsafe-regex": 2,
        "security_detect-possible-timing-attacks": 2,
        "security_detect-pseudoRandomBytes": 2,
        "security_detect-no-csrf-before-method-override": 2,
        "security_detect-buffer-noassert": 2,
        "security_detect-non-literal-fs-filename": 2
    },
    "plugins": [
        "import",
        "flowtype",
        "babel",
        "no-unsafe-regex"
    ],
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    }
}
